					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Save access token to collection variable\", function () {\r",
							"    const responseBody = pm.response.json();\r",
							"    if (responseBody.accessToken) {\r",
							"        pm.collectionVariables.set(\"accessToken\", responseBody.accessToken);\r",
							"    } else {\r",
							"        pm.expect.fail(\"Access token not found in response body\");\r",
							"    }\r",
							"});\r",
							""
